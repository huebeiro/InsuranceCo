<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huebeiro.insuranceco">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewCarActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_new_car" />
        <activity
            android:name=".CalendarActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DayDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_day_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewEventActivity"
            android:label="@string/title_new_event"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".AddCauseActivity"
            android:label="@string/title_add_cause"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".AddAttachmentActivity"
            android:label="@string/title_add_attach"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ViewEventActivity"
            android:label="@string/title_view_event"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>

</manifest>
